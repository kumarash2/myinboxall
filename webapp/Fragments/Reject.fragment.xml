<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core">
    <Dialog type="Message" title="Reject">
        <content>
            <Label text="Reject Confirmation" />
            <TextArea liveChange=".onComments"/>
        </content>
        <beginButton>
            <Button  text="Reject" type="Emphasized" press=".onReject" enabled="false"/>
        </beginButton>
        <endButton>
            <Button text="Cancel"  press=".onCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>